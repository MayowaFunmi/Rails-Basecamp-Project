

<div class="content" style="margin:3% ;">
           
            <%= link_to "New project", new_project_path, class:"btn btn-outline-primary" %>
            <br>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Projects</h4>
                  </div>
                  
                  <div class="card-body" style="margin-bottom: 2%;">
                    <div class="row">

                  <% @projects.each do |project| %>
                   
                    <div class="col-md-4" style="margin-bottom:4%">
                    <div class="card" >

                        <div class="card-body">
                          <h5 class="card-title"><%= render project %></h5>
                          <p style=>by  <%= project.user.name %></p>
                          <div>
                         <%= link_to "Show this project", project, class:"btn btn-primary" %>
                      </div>
                        </div>
                      </div>
                      <br>
                      
                    </div>

                   
                     <% end %>
                 
                 </div>
                 </div>
                </div>
              </div>
            </div>
          </div>